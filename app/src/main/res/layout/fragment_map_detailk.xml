<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5f5"
    android:orientation="vertical"
    tools:context=".MapDetailkFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="45dp"
                android:contentDescription="아이콘"
                android:src="@drawable/recycle11" />

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="강북1동 푸르지오 분리수거장"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#00675E"
                android:layout_marginBottom="8dp" />

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/recycle_place"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/recyclebin"
                android:layout_marginEnd="5dp"/>
            <TextView
                android:id="@+id/addressTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="주소: 서울시 강북구 도봉로 290 (우)01128"
                android:layout_marginTop="15dp"
                android:textSize="16sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/recyclebin"
                android:layout_marginEnd="5dp"/>
            <TextView
                android:id="@+id/availableItemsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="배출 가능한 쓰레기 종류: 종이, 유리, 플라스틱, 금속"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginBottom="8dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/recyclebin"
                android:layout_marginEnd="5dp"/>
            <TextView
                android:id="@+id/foodWasteTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="음식물 쓰레기 배출 여부:  Yes"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginBottom="8dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/recyclebin"
                android:layout_marginEnd="5dp"/>
            <TextView
                android:id="@+id/paymentInfoTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="아파트 주민 카드 여부: 필요함"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginBottom="16dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/recyclebin"
                android:layout_marginEnd="5dp"/>
            <TextView
                android:id="@+id/addInfoTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="추가 정보: 근처 주차시설, 장애인 접근성 좋음"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginBottom="16dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/recyclebin"
                android:layout_marginEnd="5dp"/>
            <TextView
                android:id="@+id/openHoursTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="운영 시간: 매주 월요일 - 토요일, 8:00 AM - 6:00 PM"
                android:textSize="16sp"
                android:textColor="#0000FF"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/recyclebin"
                android:layout_marginEnd="5dp"/>
            <TextView
                android:id="@+id/warnInfoTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="주의 사항: 근처 흡연구역에 재활용 물품을 버리지 마세요."
                android:textSize="14sp"
                android:textColor="#8B0000"
                android:layout_marginBottom="16dp"/>
        </LinearLayout>




    </LinearLayout>


</FrameLayout>