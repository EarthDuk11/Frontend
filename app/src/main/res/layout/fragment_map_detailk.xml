<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5f5"
    android:orientation="vertical"
    tools:context=".MapDetailkFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="분리수거장 이름"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/recycle_place"/>

        <TextView
            android:id="@+id/addressTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주소: 분리수거장 주소"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/availableItemsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="버릴 수 있는 쓰레기 종류: 종이, 유리, 플라스틱"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/foodWasteTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="음식물 쓰레기 버릴 수 있는 지: 예"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/paymentInfoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="필요한 아파트 주민 카드 또는 현금: 주민 카드 필요"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/openHoursTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="운영 시간: 매주 월요일 - 토요일, 8:00 AM - 6:00 PM"
            android:textSize="16sp"
            android:textColor="#000000"/>

        <!-- 추가적인 정보 표시를 위한 TextView나 ImageView를 여기에 추가할 수 있습니다. -->

    </LinearLayout>


</FrameLayout>